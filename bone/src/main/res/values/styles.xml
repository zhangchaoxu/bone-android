<resources>

    <!-- RootView style. -->
    <style name="RootView">
        <item name="android:id">@id/root_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RootView.NoActionBar" parent="RootView">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- Text style. -->
    <style name="Text" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_centerVertical">true</item>

        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Text.Large" parent="@style/Text">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Small" parent="@style/Text">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Micro" parent="@style/Text">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="Text.Secondary" parent="@style/Text">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Button style. -->
    <style name="Button" parent="@android:style/Widget.Button" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="btn_shadowEnabled">false</item>
        <item name="btn_cornerRadius">0dp</item>
        <item name="btn_buttonColor">@color/primary</item>
    </style>

    <!-- EditText style. -->
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="met_clearButton">true</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_hideUnderline">true</item>
    </style>

</resources>